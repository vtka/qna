$('<%= "#answer-#{answer.id}" %> .answer-edit-errors').html('<%= render 'shared/errors', resource: answer %>');

<% unless answer.errors.present? %>
  $('<%= "#answer-#{answer.id}" %>').replaceWith('<%= j render answer %>')
  $('.<%= "#answer-#{answer.id}" %> .files').html('<%= j render 'shared/files', resource: answer %>');
  $('.<%= "#answer-#{answer.id}" %> .links').html('<%= j render 'shared/links', resource: answer %>');
  $('.answer .body').show();
<% end %>

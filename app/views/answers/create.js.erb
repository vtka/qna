$('.answer-errors').html("<%= j render 'shared/errors', resource: @answer %>");

<% if @answer.persisted? %>
  $('.answers').append('<%= j render @answer %>');
  $('.new-answer #answer_body').val('');
  window.GistEmbed.init()
  $('.new-answer .link-name-cleaner').val('');
  subscribeToAnswerChannel('<%=@answer.to_gid_param %>')
<% end %>

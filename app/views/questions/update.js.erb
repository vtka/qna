$('<%= ".question" %> .question-edit-errors').html('<%= render 'shared/errors', resource: question %>');

<% unless question.errors.present? %>
  $('.question .title').html('<%= j question.title %>')
  $('.question .body').html('<%= j question.body %>')
  $('.question .files').html("<%= j render 'shared/files', resource: question %>");
  $('.question .links').html("<%= j render 'shared/links', resource: question %>");
  $('.edit-question-link').show();
  $('.question-edit-form').hide();
  $('.question .title').show();
  $('.question .body').show();
  $('.question .body').show();
<% end %>
